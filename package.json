{
  "name": "lin-little-plugin",
  "displayName": "lin-little-plugin",
  "description": "This is a 'vscode' plugin that provides some small features.",
  "repository": "https://github.com/1123972359/lin-little-plugin",
  "publisher": "lbb",
  "version": "0.0.5",
  "icon": "logo.png",
  "engines": {
    "vscode": "^1.80.2"
  },
  "categories": [
    "Other"
  ],
  "main": "./dist/extension.js",
  "activationEvents": [],
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Code插件demo",
      "properties": {
        "lin-little-plugin.translate-store-appid": {
          "type": "string",
          "description": "appid"
        },
        "lin-little-plugin.translate-store-secret": {
          "type": "string",
          "description": "secret"
        }
      }
    },
    "commands": [
      {
        "command": "lin-little-plugin.translate2En",
        "title": "翻译成英文`translate`"
      },
      {
        "command": "lin-little-plugin.translate2Zh",
        "title": "翻译成中文`translate`"
      },
      {
        "command": "lin-little-plugin.transformUpper",
        "title": "转换大小写"
      },
      {
        "command": "lin-little-plugin.createMarkdownSnippets",
        "title": "创建`markdown`片段"
      }
    ],
    "submenus": [
      {
        "id": "lin-little-plugin.menulist",
        "label": "小插件"
      }
    ],
    "menus": {
      "lin-little-plugin.menulist": [
        {
          "command": "lin-little-plugin.translate2En",
          "group": "group1@1",
          "when": "editorHasSelection"
        },
        {
          "command": "lin-little-plugin.translate2Zh",
          "group": "group1@2",
          "when": "editorHasSelection"
        },
        {
          "command": "lin-little-plugin.transformUpper",
          "group": "group1@3",
          "when": "editorHasSelection"
        },
        {
          "command": "lin-little-plugin.createMarkdownSnippets",
          "group": "group1@4"
        }
      ],
      "editor/context": [
        {
          "submenu": "lin-little-plugin.menulist",
          "group": "navigation"
        }
      ]
    },
    "keybindings": [
      {
        "command": "lin-little-plugin.translate2En",
        "key": "ctrl+alt+1",
        "mac": "cmd+alt+1",
        "when": "editorHasSelection"
      },
      {
        "command": "lin-little-plugin.translate2Zh",
        "key": "ctrl+alt+2",
        "mac": "cmd+alt+2",
        "when": "editorHasSelection"
      },
      {
        "command": "lin-little-plugin.transformUpper",
        "key": "ctrl+alt+3",
        "mac": "cmd+alt+3",
        "when": "editorHasSelection"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "publish": "vsce publish"
  },
  "devDependencies": {
    "@types/md5": "^2.3.5",
    "@types/mocha": "^10.0.3",
    "@types/node": "18.x",
    "@types/vscode": "^1.80.0",
    "@typescript-eslint/eslint-plugin": "^6.9.0",
    "@typescript-eslint/parser": "^6.9.0",
    "@vscode/test-electron": "^2.3.6",
    "eslint": "^8.52.0",
    "glob": "^10.3.10",
    "mocha": "^10.2.0",
    "ts-loader": "^9.5.0",
    "typescript": "^5.2.2",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "axios": "^1.6.1",
    "md5": "^2.3.0"
  }
}